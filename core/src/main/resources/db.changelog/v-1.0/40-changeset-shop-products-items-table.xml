<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="5" author="markevich_yauheni">
        <createTable tableName="product_shops">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="BIGINT">
                <constraints  nullable="false"/>
            </column>
            <column name="quantity" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints foreignKeyName="product_shop_store_fk" references="stores(id)"/>
            </column>
            <column name="store_id" type="BIGINT">
                <constraints foreignKeyName="product_shop_product_fk" references="products(id)"/>
            </column>
        </createTable>
        <rollback>

        </rollback>
    </changeSet>

</databaseChangeLog>